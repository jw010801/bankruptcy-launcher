{
  "name": "bankruptcy-launcher",
  "version": "1.0.0",
  "description": "파산게임 서버 런처 - 기본 버전",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win"
  },
  "keywords": [
    "minecraft",
    "launcher",
    "bankruptcy-game"
  ],
  "author": "ljw01",
  "license": "MIT",
  "devDependencies": {
    "electron": "^22.0.0",
    "electron-builder": "^23.0.0"
  },
  "dependencies": {
    "@azure/msal-node": "^2.13.0",
    "@xmcl/core": "^2.14.1",
    "@xmcl/installer": "^6.1.0",
    "@xmcl/user": "^4.2.0",
    "child_process": "^1.0.2",
    "fs-extra": "^11.1.0",
    "node-fetch": "^3.3.2",
    "axios": "^1.6.0"
  },
  "build": {
    "appId": "com.ljw01.bankruptcy-launcher",
    "productName": "파산게임 런처",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/node_modules/**/*",
      "!src/**/*",
      "!docs/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  }
}
